<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_marginTop="@dimen/distance1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/balance_t_member_card_consume_log"
        style="@style/h1"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/balance_t_member_card_consume_log"
        android:gravity="right"
        android:id="@+id/rl_t_member_card_consume_log"
        style="@style/rl_normal">
        <TextView
            android:id="@+id/tv_type_t_member_card_consume_log"
            android:layout_alignParentTop="true"
            android:text="@string/app_name"
            style="@style/plain_text"
            android:gravity="right"
            android:layout_marginRight="@dimen/distance16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time_t_member_card_consume_log"
            android:layout_below="@id/tv_type_t_member_card_consume_log"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/distance1"
            android:text="@string/app_name"
            style="@style/plain_text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>