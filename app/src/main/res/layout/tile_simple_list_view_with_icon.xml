<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#fff">

    <ImageView
        android:id="@+id/simple_list_view_img"
        android:src="@mipmap/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance16"
        android:layout_marginTop="@dimen/distance16"
        android:layout_marginBottom="@dimen/distance16"
        android:layout_marginRight="@dimen/distance4"/>

    <TextView
        android:id="@+id/simple_list_view_text"
        style="@style/plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/distance16"
        android:layout_marginLeft="@dimen/distance4"
        android:layout_marginTop="@dimen/distance16" />

</LinearLayout>