<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_marginTop="@dimen/distance4"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_t_with_text"
        style="@style/plain_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/distance8"
        android:layout_marginLeft="@dimen/distance16"
        android:layout_marginTop="@dimen/distance8"
        android:text="课程名称" />
    <EditText
        android:id="@+id/et_t_with_text"
        style="@style/plain_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_toRightOf="@id/tv_t_with_text"
        android:layout_marginBottom="@dimen/distance8"
        android:layout_marginRight="@dimen/distance16"
        android:layout_marginTop="@dimen/distance8"
        android:text="@string/app_name" />

</RelativeLayout>