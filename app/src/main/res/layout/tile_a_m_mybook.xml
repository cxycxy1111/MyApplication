<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/rl_normal">
    <TextView
        android:id="@+id/tv_course_name_tile_a_m_mybook"
        android:layout_alignParentTop="true"
        style="@style/h2"
        android:text="课程名称"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_line2_tile_a_m_mybook"
        android:layout_below="@id/tv_course_name_tile_a_m_mybook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_start_time_tile_a_m_mybook"
            style="@style/plain_text2"
            android:text="开始时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_last_time_tile_a_m_mybook"
            android:layout_centerHorizontal="true"
            style="@style/plain_text2"
            android:text="持续时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_classroom_tile_a_m_mybook"
            android:layout_alignParentRight="true"
            style="@style/plain_text2"
            android:layout_marginRight="@dimen/distance16"
            android:text="课室"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_teacher_tile_a_m_mybook"
        android:layout_below="@id/rl_line2_tile_a_m_mybook"
        style="@style/plain_text2"
        android:text="教师列表"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_button_area_tile_a_m_mybook"
        android:layout_below="@id/tv_teacher_tile_a_m_mybook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_attend_tile_a_m_mybook"
            style="@style/plain_button"
            android:text="签到"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/distance16"
            android:layout_marginRight="@dimen/distance16"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>