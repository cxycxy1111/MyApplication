<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dengweixiong.Activity.Member.MemberDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_activity_member_detail"
        android:theme="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:popupTheme="@style/AlfredOverlay">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollview_activity_member_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_activity_member_detail">

        <LinearLayout
            android:id="@+id/linearlayout_1_activity_member_detail"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearlayout_activity_member_detail"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance16"
                android:background="#fff">

                <EditText
                    android:id="@+id/edittext_sn_activity_member_detail"
                    style="@style/plain_text"
                    android:hint="会员编号(不可修改)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance16"
                    android:layout_marginLeft="@dimen/distance16"
                    android:layout_marginRight="@dimen/distance16"/>
                <EditText
                    android:id="@+id/edittext_name_activity_member_detail"
                    style="@style/plain_text"
                    android:hint="姓名"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance8"
                    android:layout_marginLeft="@dimen/distance16"
                    android:layout_marginRight="@dimen/distance16"/>
                <EditText
                    android:id="@+id/edittext_birthday_activity_member_detail"
                    style="@style/plain_text"
                    android:hint="出生日期"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance8"
                    android:layout_marginLeft="@dimen/distance16"
                    android:layout_marginRight="@dimen/distance16"/>
                <EditText
                    android:id="@+id/edittext_phone_activity_member_detail"
                    style="@style/plain_text"
                    android:hint="手机号码"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance8"
                    android:layout_marginLeft="@dimen/distance16"
                    android:layout_marginRight="@dimen/distance16"/>
                <EditText
                    android:id="@+id/edittext_im_activity_member_detail"
                    style="@style/plain_text"
                    android:hint="即时通讯"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance8"
                    android:layout_marginLeft="@dimen/distance16"
                    android:layout_marginRight="@dimen/distance16"
                    android:layout_marginBottom="@dimen/distance8"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_activity_member_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearlayout_activity_member_detail">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>