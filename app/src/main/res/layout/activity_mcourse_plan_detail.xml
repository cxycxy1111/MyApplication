<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Member.Discovery.CoursePlan.MCoursePlanDetailActivity">

    <include
        android:id="@+id/tb_a_mcourse_plan_detail"
        layout="@layout/tile_toolbar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabbar_a_mcourse_plan_detail"
        android:layout_below="@id/tb_a_mcourse_plan_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_height">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_a_mcourse_plan_detail"
        android:layout_below="@id/tabbar_a_mcourse_plan_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>


</RelativeLayout>
