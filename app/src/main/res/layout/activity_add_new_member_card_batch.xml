<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shopmember.MemberCard.Batch.AddNewMemberCardBatchActivity">

    <include
        android:id="@+id/tb_a_add_new_member_card_batch"
        layout="@layout/tile_toolbar"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_a_add_new_member_card_batch"
        android:layout_below="@id/tb_a_add_new_member_card_batch"
        android:layout_above="@id/rl_next_a_add_new_member_card_batch"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/rl_next_a_add_new_member_card_batch"
        style="@style/rl_normal"
        android:elevation="@dimen/distance4"
        android:translationZ="@dimen/distance4"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_next_a_add_new_member_card_batch"
            style="@style/plain_button"
            android:layout_centerVertical="true"
            android:text="下一步"/>
    </RelativeLayout>

</RelativeLayout>