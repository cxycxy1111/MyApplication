<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/rl_normal"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_course_name_t_book"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        style="@style/plain_text"
        android:text="课程名称"/>
    <Button
        android:id="@+id/btn_check"
        android:text="签到"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        style="@style/plain_button" />

    <TextView
        android:id="@+id/tv_start_time_t_book"
        android:layout_below="@id/tv_course_name_t_book"
        style="@style/plain_text2"
        android:layout_alignParentLeft="true"
        android:text="上课时间"/>

    <TextView
        android:id="@+id/tv_last_time_t_book"
        android:layout_below="@id/tv_course_name_t_book"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        style="@style/plain_text2"
        android:text="持续时间" />

    <TextView
        android:id="@+id/tv_classroom_t_book"
        android:layout_below="@id/tv_course_name_t_book"
        android:layout_alignParentRight="true"
        style="@style/plain_text2"
        android:text="课室名称"/>

</RelativeLayout>