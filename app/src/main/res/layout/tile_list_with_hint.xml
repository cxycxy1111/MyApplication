<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_marginTop="@dimen/distance1"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_main_text_list_with_hint"
        style="@style/plain_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/distance16"
        android:layout_marginLeft="@dimen/distance16"
        android:layout_marginTop="@dimen/distance16"
        android:text="@string/app_name" />
    <TextView
        android:id="@+id/tv_hint_text_list_with_hint"
        style="@style/plain_text_hint"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="right"
        android:layout_toRightOf="@id/tv_main_text_list_with_hint"
        android:layout_marginBottom="@dimen/distance16"
        android:layout_marginRight="@dimen/distance16"
        android:layout_marginTop="@dimen/distance16"
        android:text="@string/app_name" />

</RelativeLayout>