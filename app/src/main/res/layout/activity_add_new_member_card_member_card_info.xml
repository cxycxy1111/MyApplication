<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shopmember.MemberCard.Batch.AddNewMemberCardBatchInfoActivity">

    <include
        android:id="@+id/tb_a_add_new_member_card_mc_info"
        layout="@layout/tile_toolbar"/>
    <ScrollView
        android:id="@+id/sv_a_add_new_member_card_mc_info"
        android:layout_below="@id/tb_a_add_new_member_card_mc_info"
        android:layout_above="@id/rl_done_a_add_new_member_card_mc_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_price_a_add_new_member_card_mc_info"
                style="@style/rl_first_widget">
                <TextView
                    android:id="@+id/tv_price_a_add_new_member_card_mc_info"
                    style="@style/tv_input_area"
                    android:text="售价"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:id="@+id/et_price_a_add_new_member_card_mc_info"
                    android:layout_toRightOf="@id/tv_price_a_add_new_member_card_mc_info"
                    style="@style/plain_editText"
                    android:hint="元"
                    android:maxLines="1"
                    android:inputType="number"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_balance_a_add_new_member_card_mc_info"
                style="@style/rl_normal">
                <TextView
                    android:id="@+id/tv_balance_a_add_new_member_card_mc_info"
                    style="@style/tv_input_area"
                    android:text="卡内余额"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:id="@+id/et_balance_a_add_new_member_card_mc_info"
                    android:layout_toRightOf="@id/tv_balance_a_add_new_member_card_mc_info"
                    style="@style/plain_editText"
                    android:hint="元"
                    android:maxLines="1"
                    android:inputType="number" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_num_a_add_new_member_card_mc_info"
                style="@style/rl_normal">
                <TextView
                    android:id="@+id/tv_num_a_add_new_member_card_mc_info"
                    style="@style/tv_input_area"
                    android:text="卡内次数"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:id="@+id/et_num_a_add_new_member_card_mc_info"
                    android:layout_toRightOf="@id/tv_num_a_add_new_member_card_mc_info"
                    style="@style/plain_editText"
                    android:hint="次"
                    android:maxLines="1"
                    android:inputType="number"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_starttime_a_add_new_member_card_mc_info"
                style="@style/rl_normal">
                <TextView
                    android:id="@+id/tv_starttime_a_add_new_member_card_mc_info"
                    style="@style/tv_input_area"
                    android:text="生效时间"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:id="@+id/et_starttime_a_add_new_member_card_mc_info"
                    android:layout_toRightOf="@id/tv_starttime_a_add_new_member_card_mc_info"
                    style="@style/plain_editText"
                    android:hint="生效时间"
                    android:maxLines="1"
                    android:inputType="date"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_invalidtime_a_add_new_member_card_mc_info"
                style="@style/rl_normal">
                <TextView
                    android:id="@+id/tv_invalidtime_a_add_new_member_card_mc_info"
                    style="@style/tv_input_area"
                    android:text="失效时间"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:id="@+id/et_invalidtime_a_add_new_member_card_mc_info"
                    android:layout_toRightOf="@id/tv_invalidtime_a_add_new_member_card_mc_info"
                    style="@style/plain_editText"
                    android:hint="失效时间"
                    android:maxLines="1"
                    android:inputType="date"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rl_done_a_add_new_member_card_mc_info"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_done_a_add_new_member_card_mc_info"
            android:layout_centerVertical="true"
            android:text="完成"
            style="@style/plain_button" />
    </RelativeLayout>
</RelativeLayout>