<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xyz.institutionmanager.sailfish.Shopmember.Profile.Shopmember.ResetShopmemberPasswordActivity">

    <include
        android:id="@+id/tb_activity_reset_shopmember_password"
        layout="@layout/tile_toolbar"/>

    <RelativeLayout
        android:id="@+id/rl_newpwd_a_reset_shopmember_password"
        android:layout_below="@id/tb_activity_reset_shopmember_password"
        style="@style/rl_first_widget">
        <TextView
            android:id="@+id/tv_newpwd_a_reset_shopmember_password"
            style="@style/tv_input_area"
            android:layout_width="@dimen/distance96"
            android:text="新密码" />
        <EditText
            android:id="@+id/et_newpwd_a_reset_shopmember_password"
            android:layout_toRightOf="@id/tv_newpwd_a_reset_shopmember_password"
            style="@style/plain_editText"
            android:inputType="textVisiblePassword"
            android:hint="新密码" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_repeat_newpwd_a_reset_shopmember_password"
        android:layout_below="@id/rl_newpwd_a_reset_shopmember_password"
        style="@style/rl_normal">
        <TextView
            android:id="@+id/tv_repeat_newpwd_a_reset_shopmember_password"
            style="@style/tv_input_area"
            android:layout_width="@dimen/distance96"
            android:text="重复新密码" />
        <EditText
            android:id="@+id/et_repeat_newpwd_a_reset_shopmember_password"
            android:layout_toRightOf="@id/tv_repeat_newpwd_a_reset_shopmember_password"
            style="@style/plain_editText"
            android:inputType="textVisiblePassword"
            android:hint="新密码" />
    </RelativeLayout>

</RelativeLayout>
