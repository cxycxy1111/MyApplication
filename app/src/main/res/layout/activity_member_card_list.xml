<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.institutionmanager.sailfish.Shopmember.MemberCard.MemberCardListActivity">

    <include
        android:id="@+id/toolbar_a_member_card_list"
        layout="@layout/tile_toolbar">
    </include>

    <RelativeLayout
        android:id="@+id/ll_spinner_a_member_card_list"
        android:layout_below="@id/toolbar_a_member_card_list"
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/sp_a_member_card_list"
            android:layout_margin="@dimen/distance16"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:dropDownWidth="@dimen/distance128"
            android:layout_height="wrap_content">
        </Spinner>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_a_member_card_list"
        android:layout_below="@id/ll_spinner_a_member_card_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>